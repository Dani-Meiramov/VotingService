@model VotingViewModel;

<form asp-action="CreateVoting" method="post">
    <div class="form-group">
        <label class="col-md-2"><b>Voting Name</b></label>
        <div class="col-md-2">
            <span asp-validation-for="VotingName" class="text-danger"></span>
            <input asp-for="VotingName" type="text" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2"><b>Question</b></label>
        <div class="col-md-2">
            <span asp-validation-for="Question" class="text-danger"></span>
            <input asp-for="Question" type="text" class="form-control" />
        </div>
    </div>
    @for (int i = 0; i < Model.Options.Count; i++)
    {
        <div class="form-group">
            <label class="col-md-2"><b>Option @(i + 1)</b></label>
            <div class="col-md-2">
                <span asp-validation-for="@Model.Options[i].Option" class="text-danger"></span>
                <input asp-for="@Model.Options[i].Option" type="text" class="form-control" />
            </div>
        </div>
    }
    <div class="form-group">
        <div class="col-md-2">
            <button class="btn btn-primary">Create Voting</button>
        </div>
    </div>
</form>
<li><a asp-controller="Home" asp-action="Index">Home</a></li>